class Solution {
public:
    string shiftingLetters(string s, vector<int>& shifts) {
        int n=shifts.size();
        for(auto i:shifts) 
            sum+=i;
        sum=sum
       
        for(int i=0;i<s.size();i++){
           s[i]= (s[i]-'a'+shifts[i])%26+'a';
        }
        return s;
    }
};
